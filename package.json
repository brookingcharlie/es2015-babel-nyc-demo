{
  "name": "es2015-babel-nyc-demo",
  "version": "1.0.0",
  "description": "Demonstrates usage of nyc for code coverage on a Babel-transpiled ES2015 project",
  "author": "Charlie Brooking",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "build": "webpack",
    "start": "webpack-dev-server",
    "test": "nyc -- mocha --compilers js:babel-register --require test/setup.js test/**/*_test.js"
  },
  "devDependencies": {
    "babel-core": "^6.7.6",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "chai": "^3.5.0",
    "jsdom": "^8.4.0",
    "mocha": "^2.4.5",
    "nyc": "^6.4.0",
    "webpack": "^1.13.0",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {},
  "nyc": {
    "require": [
      "babel-core/register",
      "babel-polyfill"
    ],
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/main.js"
    ],
    "all": true,
    "reporter": "lcov",
    "report-dir": "./build/coverage",
    "lines": 90,
    "check-coverage": true
  }
}
